<?xml version="1.0"?>
<tool_dependency>
    <package name="soap" version="1.11">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://github.com/gigascience/bgi-soap1/archive/master.zip</action>
                <action type="move_file">
                    <source>bin/soap</source>
                    <destination>$INSTALL_DIR/bin</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
    </package>
</tool_dependency>